@model Seiton.Models.Tarefas

<div>
    <div class="modal">
        <div class="modal-content">
            <h1>Editar Tarefas</h1>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="aviso"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="nome_tarefas" class="control-label"></label>
                    <input asp-for="nome_tarefas" class="form-control" />
                    <span asp-validation-for="nome_tarefas" class="aviso"></span>
                </div>
                <div class="form-group">
                    <label asp-for="descricao" class="control-label"></label>
                    <input asp-for="descricao" class="form-control" />
                    <span asp-validation-for="descricao" class="aviso"></span>
                </div>
                <div class="form-group">
                    <label asp-for="prioridade" class="control-label"></label>
                    <select asp-for="prioridade" class="form-control"></select>
                    <span asp-validation-for="prioridade" class="aviso"></span>
                </div>
                <div class="form-group">
                    <label asp-for="responsavel" class="control-label"></label>
                    <input asp-for="responsavel" class="form-control" />
                    <span asp-validation-for="responsavel" class="aviso"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdColuna" class="control-label"></label>
                    <select asp-for="IdColuna" class="form-control" asp-items="ViewBag.IdColuna"></select>
                    <span asp-validation-for="IdColuna" class="aviso"></span>
                </div>
                <div>
                    <a class="backPage">Voltar</a> |
                    <input class="btn" type="submit" value="Editar" />
                </div>
            </form>
        </div>
    </div>
</div>
