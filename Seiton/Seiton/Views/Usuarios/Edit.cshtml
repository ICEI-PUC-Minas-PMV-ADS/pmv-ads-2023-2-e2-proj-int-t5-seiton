@model Seiton.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div>
    <div class="modal">
        <div class="modal-content">
            <h1>Editar Usuário</h1>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="aviso"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="NomeUsuario" class="control-label">Nome: </label>
                    <input asp-for="NomeUsuario" maxlength="10" class="form-control" />
                </div>
                <span asp-validation-for="NomeUsuario" class="aviso"></span>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">E-mail: </label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="aviso"></span>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label">Senha: </label>
                    <input asp-for="Senha" class="form-control" value="" />
                </div>
                <span asp-validation-for="Senha" class="aviso"></span>
                <div class="form-group">
                    <label asp-for="ConfirmacaoSenha" class="control-label">Confirmar senha: </label>
                    <input asp-for="ConfirmacaoSenha" class="form-control" value="" />
                </div>
                <span asp-validation-for="ConfirmacaoSenha" class="aviso"></span>
                <div>
                    <a class="backPage">Voltar</a> |
                    <input class="btn" type="submit" value="Editar" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}