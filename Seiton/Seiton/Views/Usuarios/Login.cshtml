@model Seiton.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<style>

    #bacground {
        width: calc(100vw / 4 * 2.5);
        height: calc(100vh / 4 * 2.2);
        margin-left: calc(100vw / 6);
        margin-top: 10%;
        position: absolute;
        z-index: -1;
        border-radius: 60px 50px 60px 350px;
        background-color: #2A6092;
    }

    .col-md-4 {
        margin-left: 55%;
        padding-top: 12%;
        width: 20%;
    }

    .form-group {
        margin-bottom: 8%;
    }

        .form-group h3 {
            color: white;
            font-size: 1.2rem;
            margin-bottom: 4%;
            font-family: sans-serif;
        }

        .form-group input {
            background-color: transparent;
            border: none;
            width: 100%;
            font-size: 1.1rem;
            border-bottom: 2px solid white;
            border-radius: 0px;
            color: white;
        }

            .form-group input::placeholder {
                color: lightgray;
            }

            .form-group input:focus {
                color: white;
                background-color: transparent;
                box-shadow: none;
                outline: 0;
            }

    .btn-success {
        margin-top: 5%;
        margin-left: 35%;
        font-size: 1.2rem;
        border-radius: 5px;
        border: none;
        padding: 5px;
        width: 35%;
        background-color: #4EAAFF;
        color: white;
        cursor: pointer;
    }

        .btn-success:hover {
            background-color: #37C936;
        }


    img {
        width: 35%;
        position: absolute;
        margin-left: 18%;
        margin-top: 5%;
    }

    h1 {
        font-size: 2rem;
        font-family: sans-serif;
        color: white;
    }

</style>

<div id="bacground">
</div>

<img src="/img/Office.png" />


<div class="row">
    <div class="col-md-4">
        <h1>Entrar</h1>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3>Nome do usuário</h3>
                <input asp-for="NomeUsuario" class="form-control" placeholder="Digite seu nome de usuário" />
                <span asp-validation-for="NomeUsuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <h3>Senha</h3>
                <input asp-for="Senha" class="form-control" type="password" placeholder="Digite sua senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <input type="submit" value="Acessar" class="btn-success" />

        </form>

        <h3>@ViewBag.Message</h3>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
