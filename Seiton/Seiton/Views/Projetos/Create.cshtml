@model Seiton.Models.Projeto

<div>
    <div class="modal">
        <div class="modal-content">
            <h1>Criar Projeto</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="aviso"></div>
                <div class="form-group">
                    <label asp-for="nome_projeto" class="control-label"></label>
                    <input asp-for="nome_projeto" maxlength="10" class="form-control" />
                </div>
                <span asp-validation-for="nome_projeto" class="aviso"></span>
                <div>
                    <a class="backPage">Voltar</a> |
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
