@model Seiton.Models.Projeto

@{
    ViewData["Title"] = "Delete";
}

<div>
    <div class="modal">
        <div class="modal-content">
            <h1>Apagar Projeto</h1>
            <hr />
            <p>Deseja realmente apagar este projeto?</p>
            <p class="aviso">(Atenção! Todos os dados presentes em colunas e tarefas serão perdidos!)</p>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <a asp-controller="Logados" asp-action="Logado">Voltar</a> |
                <input class="btn" type="submit" value="Apagar" />
            </form>
        </div>
    </div>
</div>
